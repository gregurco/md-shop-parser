{% extends 'base.html.twig' %}

{% block container %}
    <form>
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-xs-12">
                    <input type="text" name="search" class="form-control typeahead" id="topDiscountSearchTypeahead" placeholder="{{ 'top_search.input_placeholder'|trans }}">
                </div>
            </div>
        </div>

        <div class="panel panel-default mr-top-25">
            <div class="panel-body form-inline">
                <div class="form-group">
                    <label for="shopFilter">Shop</label>
                    <select name="shop" class="form-control" id="shopFilter">
                        <option value="">All</option>
                        <option value="maximum">Maximum</option>
                        <option value="bomba">Bomba</option>
                        <option value="foxmart">Foxmart</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="dateRangeFilter">Date range</label>
                    <input type="text" class="form-control" name="daterange" id="dateRangeFilter" value="" />
                </div>

                <div class="form-group">
                    <label for="oldPriceWasChanged">Old price was changed</label>
                    <input type="checkbox" name="oldPriceWasChanged" id="oldPriceWasChanged" />
                </div>
            </div>
        </div>
    </form>

    <div class="panel panel-default mr-top-25">
        <div class="panel-heading">
            <h3 class="panel-title">{{ 'top_discount_products.modal_header'|trans }}</h3>
        </div>

        <div class="panel-body">
            <table class="table table-striped" id="moreDiscountProductsTable">
                <thead>
                <tr>
                    <th>{{ 'top_discount_products.table_headers.product_name'|trans }}</th>
                    <th>{{ 'top_discount_products.table_headers.online_price'|trans }}</th>
                    <th>{{ 'top_discount_products.table_headers.old_price'|trans }}</th>
                    <th>{{ 'top_discount_products.table_headers.discount_percent'|trans }}</th>
                    <th>{{ 'top_discount_products.table_headers.shop'|trans }}</th>
                    <th>{{ 'top_discount_products.table_headers.record_date'|trans }}</th>
                    <th>{{ 'top_discount_products.table_headers.chart'|trans }}</th>
                    <th>{{ 'top_discount_products.table_headers.link'|trans }}</th>
                </tr>
                </thead>

                <tbody>
                    {{ include('default/_top_discount_rows.html.twig', {topDiscountProducts: topDiscountProducts}) }}
                </tbody>
            </table>

            <div class="row">
                <div class="col-xs-12 text-center">
                    <button type="button" class="btn btn-default" id="loadMoreDiscountProducts">
                        <i class="fa fa-refresh" aria-hidden="true"></i>
                        {{ 'top_discount_products.load_more_records'|trans }}
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

